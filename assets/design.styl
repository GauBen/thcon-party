// **** Margins and paddings ****
$gap-small = 1rem
$gap-normal = 2rem
$gap-large = 3rem
$gap-huge = 6rem
// **** Sizes ****
$page-width = 120rem
// **** Media queries ****
$media-large = 960px
// **** Radii ****
$radius-small = 0.25rem
$radius-normal = 0.5rem
$radius-large = 1rem
// **** Colors ****
// Light theme
$white = #fff
$black = #000
$red = #e51e21
$selection-color = alpha(lighten($red, 25%), 0.5)
$light-band = #012c54
$dark-band = #002140
$disabled = #666
// **** Timings ****
$timing-fast = 0.2s
$timing-normal = 0.5s
$timing-slow = 2s
$timing-splash = 3s
// **** Splash animation settings ****
$hero-min-width = 40em
$hero-duration = $timing-slow
$hero-font-size = 8rem
$scroll-indicator-min-height = 26rem
// **** Shadows ****
$shadow-small = 0 1px 3px
$shadow-normal = 0 3px 7px
$shadow-normal-upside-down = 0 -3px 7px
// **** Fonts ****
$sans-serif = -apple-system, 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Oxygen-Sans', 'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif
$overpass = overpass, $sans-serif

@require 'normalize.css/normalize.css'
@require 'design/mixins.styl'
@require 'design/reset.styl'
@require 'design/helpers.styl'
@require 'design/components/*.styl'
@require 'fonts/*.styl'
