@require 'normalize.css/normalize.css'

// **** Margins and paddings ****
$gap-small = 1rem
$gap-normal = 2rem
$gap-large = 3rem
$gap-huge = 6rem
// **** Sizes ****

// **** Radii ****
$radius-small = 0.25rem
$radius-normal = 0.5rem
$radius-large = 1rem
// **** Colors ****
// Light theme
$color-light-theme-bg = #fff
$color-light-theme-color = #333
$color-light-theme-box = #ccc
$color-light-theme-shadow = #0008
$color-light-theme-link = #1f47a8
$color-light-theme-accent = #e51e21
$color-light-theme-selection = rgba(50, 50, 200, 0.8)
// **** Timings ****
$timing-fast = 0.2s
$timing-normal = 0.5s
$timing-slow = 2s
// **** Splash animation settings ****
$hero-min-width = 40em
$hero-duration = $timing-slow
$hero-font-size = 8rem
$scroll-indicator-min-height = 26rem
// **** Shadows ****
$shadow-small = 0 1px 3px
// **** Fonts ****
$sans-serif = -apple-system, 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Oxygen-Sans', 'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif

@require 'design/reset.styl'
@require 'design/helpers.styl'
@require 'design/components/*.styl'
