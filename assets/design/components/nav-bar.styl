.nav-bar
  padding $gap-normal
  background #fff
  border-block-end #ccc 1px solid
  box-shadow $shadow-normal #cccc

  > .list
    display flex
    gap $gap-normal
    justify-content center
    max-width $page-width
    margin 0 auto
    list-style-type none

    > .item > .link
      text-decoration inherit
