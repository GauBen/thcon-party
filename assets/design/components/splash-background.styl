.splash-background
  position relative
  width 100%
  height 100%
  color #888
  background #fff
  clip-path polygon(0 0, 100% 0, 100% calc(100% - min(1, var(--scroll)) * 10%), 50% 100%, 0 calc(100% - min(1, var(--scroll)) * 10%))

  > .console
    position absolute
    bottom 0
    padding $gap-normal
    line-height 1
