._text-justify
  text-align justify

._fade-in
  opacity 0
  transition opacity $timing-normal ($timing-splash - $timing-fast)

  /* stylelint-disable-next-line */
  body.-do-splash &
  body.-no-js &
    opacity 1

._accent
  color #e51e21

._flex
  display flex
  flex-direction column

._flex1
  flex 1

._end
  justify-content flex-end

._center
  display flex
  align-items center
  justify-content center
