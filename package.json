{
  "name": "gauben.github.io",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "repository": "git@github.com:GauBen/gauben.github.io.git",
  "author": "Gautier Ben AÃ¯m <benaim.gautier@gmail.com>",
  "license": "MIT",
  "browserslist": "defaults",
  "scripts": {
    "start": "yarn build && npm-run-all --parallel watch:*",
    "watch:eleventy": "eleventy --serve --output=_pre-dist",
    "watch:parcel": "parcel '_pre-dist/**/*.{html,txt}' --dist-dir _dist --cache-dir _cache --no-source-maps",
    "clean": "rimraf ./_dist ./_pre-dist",
    "build": "yarn clean && yarn build:eleventy && yarn build:parcel",
    "build:eleventy": "eleventy --output=_pre-dist",
    "build:parcel": "parcel build '_pre-dist/**/*.{html,txt}' --dist-dir _dist --cache-dir _cache --no-source-maps",
    "test": "yarn test:styl && yarn test:ts && echo ':)'",
    "test:styl": "stylelint './assets/**/*.styl' --custom-syntax stylelint-plugin-stylus/custom-syntax --fix",
    "test:ts": "eslint './assets/**/*.ts' --fix",
    "preview": "yarn build && yarn serve --no-clipboard _dist"
  },
  "devDependencies": {
    "@11ty/eleventy": "11ty/eleventy#a741537f695ebaa112d61780aee134b714439829",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@parcel/optimizer-cssnano": "2.0.0-nightly.612",
    "@parcel/optimizer-htmlnano": "2.0.0-nightly.612",
    "@parcel/packager-css": "2.0.0-nightly.612",
    "@parcel/packager-html": "2.0.0-nightly.612",
    "@parcel/transformer-css": "2.0.0-nightly.612",
    "@parcel/transformer-html": "2.0.0-nightly.612",
    "@parcel/transformer-image": "2.0.0-nightly.2234",
    "@parcel/transformer-postcss": "2.0.0-nightly.612",
    "@parcel/transformer-posthtml": "2.0.0-nightly.612",
    "@parcel/transformer-stylus": "2.0.0-nightly.612",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "copy-and-watch": "^0.1.4",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.21.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "moment": "^2.27.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "2.0.0-nightly.610",
    "postcss": "^8.2.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "sharp": "^0.27.2",
    "stylelint": "^13.5.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-plugin-stylus": "^0.10.0",
    "stylelint-rscss": "^0.4.0",
    "stylus": "^0.54.7",
    "typescript": "^4.0.5"
  }
}
